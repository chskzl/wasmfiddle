extends master.pug
block title
    | Create Account
block content
    h2 Create Account
    form.narrow(method='POST' action='/createAccount' autocomplete='off')
        div.relative
            input.form-control(type='text' name='name' autocomplete='off' required)
            span.placeholderLabel Full Name
        div.relative
            input.form-control(type='email' name='email' autocomplete='off' required)
            label.placeholderLabel Your email address
        div.relative
            input.form-control(type='password' name='password' autocomplete='off' required)
            label.placeholderLabel Password
        div.relative
            input.form-control(type='password' name='confirmPassword' autocomplete='off' required)
            label.placeholderLabel Confirm Password
        div.recaptcha !{recaptcha}
        button.btn.btn-primary(type='submit') Create Account
    if status == 1
        h4 Successfully added
    if status == 0
        h4.red Error adding data
